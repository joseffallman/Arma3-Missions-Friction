 * Description:
 * Handles vehicle types for both sides.
 */
namespace Mission.Server
{
	public class VehicleTypeDictionary
	{
		private fields ["_mVehicleTypes" as Array /* of VehicleSideAlias */];
		
		// Creates a VehicleTypeHandler object.
		public constructor()
		{
			_mVehicleTypes = [
				// Trucks
				["AMMO TRUCK", "B_Truck_01_ammo_F", "O_Truck_03_ammo_F", ""] new VehicleSideAlias,
				["TRANSPORT TRUCK", "B_Truck_01_transport_F", "O_Truck_03_transport_F", ""] new VehicleSideAlias,
				["FUEL TRUCK", "B_Truck_01_fuel_F", "O_Truck_03_fuel_F", ""] new VehicleSideAlias,
				["MEDICAL TRUCK", "B_Truck_01_medical_F", "O_Truck_03_medical_F", ""] new VehicleSideAlias,
				["DEVICE TRUCK", "B_Truck_01_box_F", "O_Truck_03_device_F", ""] new VehicleSideAlias,
				["REPAIR TRUCK", "B_Truck_01_Repair_F", "O_Truck_03_repair_F", ""] new VehicleSideAlias,
				
				// Cars
				["MRAP", "B_MRAP_01_F", "O_MRAP_02_F", "I_MRAP_03_F"] new VehicleSideAlias,
				["QUADBIKE", "B_Quadbike_01_F", "O_Quadbike_01_F", "I_Quadbike_01_F"] new VehicleSideAlias,
				
				// Air vehicles
				["TRANSPORT HELICOPTER", "B_Heli_Transport_01_F", "O_Heli_Light_02_unarmed_F", ""] new VehicleSideAlias,
				
				// Wrecks
				["HELICOPTER WRECK", "Land_Wreck_Heli_Attack_01_F", "Land_Wreck_Heli_Attack_02_F", ""] new VehicleSideAlias,
				
				// Ammo boxes
				["AMMOBOX ORDNANCE", "Box_NATO_AmmoOrd_F", "Box_East_AmmoOrd_F", "Box_IND_AmmoOrd_F"] new VehicleSideAlias,
				
				// Ammo boxes
				["ASSAULT BOAT", "B_Boat_Transport_01_F", "O_Boat_Transport_01_F", ""] new VehicleSideAlias,
				
				// Turrets
				["STATIC AA LAUNCHER", "B_static_AA_F", "O_static_AA_F", "I_static_AA_F"] new VehicleSideAlias,
								
				// Neutral objects
				["CLOSED PAPERBOX", "Land_PaperBox_closed_F", "Land_PaperBox_closed_F", "Land_PaperBox_closed_F"] new VehicleSideAlias,
				["OPEN PAPERBOX", "Land_PaperBox_open_empty_F", "Land_PaperBox_open_empty_F", "Land_PaperBox_open_empty_F"] new VehicleSideAlias,
				["WOODEN BOX", "Land_WoodenBox_F", "Land_WoodenBox_F", "Land_WoodenBox_F"] new VehicleSideAlias
			];
		};
		
		public method AddEntry("_alias" as String, "_westVehicleType" as String, "_eastVehicleType" as String, "_guerillaVehicleType" as String)
		{
			_mVehicleTypes pushBack [_alias, _westVehicleType, _eastVehicleType, _guerillaVehicleType] new VehicleSideAlias;
		};
		
		public method String GetVehicleType("_alias" as String, "_side" as Side)
		{
			{
				if (_x.Name == _alias) then {
					return [_side] call _x.GetVehicleType;
				};
			} foreach _mVehicleTypes as VehicleSideAlias;
			
			return "";
		};
	};
};
